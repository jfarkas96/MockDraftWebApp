<h1>Players</h1>

<table>
    <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Grade</th>
    </tr>
    
    <% @players.each do |player| %>
        <tr>
            <td><%= link_to player.name, player_path(player) %></td>
            <td><%= player.position %></td>
            <td><%= player.grade %></td>
        </tr>
    <% end %>
</table>