<div class="comments">
<h2>Comments</h2>
<% @mockdraft.mock_draft_comments.each do |comment| %>
    <div class="individual_comment">
    <p>
        <strong>Commenter:</strong>
        <%= comment.commenter %>
    </p>
    
    <p>
        <strong>Comment:</strong>
